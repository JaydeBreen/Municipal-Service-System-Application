@model MunicipalServices.Models.Event

@{
    ViewData["Title"] = "Create New Event or Announcement";
}

<h1>@ViewData["Title"]</h1>
<p class="lead text-danger">This page is restricted to Staff and Administrators.</p>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EventType" class="control-label"></label>
                <select asp-for="EventType" class="form-control">
                    <option value="">-- Select Event Type --</option>
                    <option value="Community Meeting">Community Meeting</option>
                    <option value="Public Notice">Public Notice</option>
                    <option value="Service Outage">Service Outage</option>
                    <option value="Holiday">Holiday</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="EventType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EventDateTime" class="control-label"></label>
                <input asp-for="EventDateTime" class="form-control" />
                <span asp-validation-for="EventDateTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create Event" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
