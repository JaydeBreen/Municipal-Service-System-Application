@model MunicipalServices.Models.EventsIndexViewModel

@{
    ViewData["Title"] = "Local Events and Announcements";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">@ViewData["Title"]</h1>

    <form asp-controller="Events" asp-action="Index" method="get" class="mb-8 p-4 bg-white shadow-lg rounded-lg flex flex-wrap gap-4 items-center">

        <div class="flex-grow">
            <label for="searchString" class="sr-only">Search Events</label>
            <input type="text"
                   name="searchString"
                   id="searchString"
                   class="w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2"
                   placeholder="Search by title or description..."
                   value="@(Model.CurrentSearchString ?? "")" />
        </div>

        <div>
            <label for="categoryFilter" class="sr-only">Filter by Category</label>
            <select name="categoryFilter" id="categoryFilter" class="border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2">
                @foreach (var category in Model.Categories)
                {
                    <option value="@category" selected="@(category == (Model.CurrentCategoryFilter ?? ""))">@category</option>
                }
            </select>
        </div>

        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md shadow transition duration-150">
            Apply Filters
        </button>
        <a asp-action="Index" class="text-gray-600 hover:text-gray-800 py-2 px-4 border border-gray-300 rounded-md transition duration-150">
            Clear
        </a>
    </form>

    @if (Model.RecommendedEvents.Any())
    {
        <h2 class="text-2xl font-semibold text-gray-700 mb-4 border-b pb-2">Recommended for You</h2>
        <div class="grid md:grid-cols-2 gap-4 mb-8">
            @foreach (var item in Model.RecommendedEvents)
            {
                <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 rounded-lg shadow-md">
                    <div class="flex justify-between items-start">
                        <h3 class="text-xl font-bold text-yellow-800">@item.Title</h3>
                        <span class="text-sm font-semibold px-3 py-1 rounded-full bg-yellow-200 text-yellow-800">RECOMMENDED</span>
                    </div>
                    <p class="text-sm text-gray-600 mt-2">
                        @item.Description
                    </p>
                    <div class="flex justify-between text-xs text-gray-500 mt-3">
                        <span><i class="fas fa-calendar-alt mr-1"></i> @item.EventDateTime.ToString("MMM dd, yyyy h:mm tt")</span>
                        <span><i class="fas fa-map-marker-alt mr-1"></i> @item.Location</span>
                    </div>
                    <a asp-action="Details" asp-route-id="@item.Id" class="mt-3 inline-block text-yellow-600 hover:text-yellow-700 font-medium text-sm">View Details &rarr;</a>
                </div>
            }
        </div>
    }

    <h2 class="text-2xl font-semibold text-gray-700 mb-4 border-b pb-2">All Events (@Model.Events.Count())</h2>

    @if (!Model.Events.Any())
    {
        <div class="text-center p-10 bg-gray-100 rounded-lg">
            <p class="text-xl text-gray-500">No events found matching your criteria.</p>
            <a asp-action="Index" class="mt-4 inline-block text-blue-600 hover:text-blue-700 font-medium">Clear Search & View All</a>
        </div>
    }
    else
    {
        <div class="grid gap-6">
            @foreach (var item in Model.Events)
            {
                var priorityClass = item.Priority == "High" ? "bg-red-50 border-red-500" :
                item.Priority == "Medium" ? "bg-orange-50 border-orange-500" :
                "bg-blue-50 border-blue-500";

                <div class="@priorityClass border-l-4 p-4 rounded-lg shadow-md hover:shadow-xl transition duration-300 ease-in-out">
                    <div class="flex justify-between items-start">
                        <h3 class="text-xl font-bold text-gray-900">
                            @item.Title
                            @if (item.Priority == "High")
                            {
                                <span class="ml-2 text-xs font-semibold px-2 py-0.5 rounded-full bg-red-500 text-white">HIGH PRIORITY</span>
                            }
                        </h3>
                        <span class="text-sm font-semibold px-3 py-1 rounded-full bg-gray-200 text-gray-700">@item.Category</span>
                    </div>

                    <p class="text-sm text-gray-600 mt-2">
                        @item.Description
                    </p>

                    <div class="mt-4 pt-3 border-t border-gray-200 flex justify-between text-sm text-gray-500">
                        <div>
                            <i class="far fa-calendar-alt mr-1"></i>
                            Event: <span class="font-medium text-gray-700">@item.EventDateTime.ToString("MMM dd, yyyy h:mm tt")</span>
                        </div>
                        <div>
                            <i class="fas fa-map-marker-alt mr-1"></i>
                            Location: <span class="font-medium text-gray-700">@item.Location</span>
                        </div>
                    </div>

                    <a asp-action="Details" asp-route-id="@item.Id" class="mt-3 inline-block text-blue-600 hover:text-blue-700 font-medium text-sm">View Full Announcement &rarr;</a>
                </div>
            }
        </div>
    }

</div>
