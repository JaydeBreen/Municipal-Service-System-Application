@using Microsoft.AspNetCore.Identity
@using MunicipalServices.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        // Check if the user is Staff or Admin for special links
        bool isStaffOrAdmin = User.IsInRole("Staff") || User.IsInRole("Admin");

        // Display the user's name or a link to their profile
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @(UserManager.GetUserAsync(User).Result?.FullName ?? UserManager.GetUserName(User))!</a>
        </li>

        // Staff/Admin only link: Management Dashboard or quick link
        @if (isStaffOrAdmin)
        {
            <li class="nav-item">
                <a id="staffLink" class="nav-link text-danger" asp-controller="ServiceRequests" asp-action="List" title="Staff Management">Staff Portal</a>
            </li>
        }

        // Logout Form
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        // Register Link
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>

        // Login Link
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
