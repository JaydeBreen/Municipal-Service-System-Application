﻿@{
    ViewData["Title"] = "Main Menu";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Welcome to Municipal Services</h1>
    <p class="text-center text-muted">Select an option below to get started.</p>

    <div class="row mt-5">@* This container holds the main navigation cards for the application. *@

        @* --- Report Service Request --- *@
        <div class="col-md-12 mb-3">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Report Service Request</h5>
                        <p class="card-text text-muted">Report issues like potholes, water leaks, or illegal dumping.</p>
                    </div>
                    <a asp-controller="ServiceRequests" asp-action="Report" class="btn btn-primary">Go</a>
                </div>
            </div>
        </div>

        @* --- Local Events and Announcements Card --- *@
        <div class="col-md-12 mb-3">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Local Events and Announcements</h5>
                        <p class="card-text">View upcoming community events and important announcements.</p>
                    </div>
                    <a asp-controller="Events" asp-action="Index" class="btn btn-info">View</a>
                </div>
            </div>
        </div>

        @* --- Service Request Status Tracking Card --- *@
        <div class="col-md-12 mb-3">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Service Request Status</h5>
                        <p class="card-text">Track the progress of your reported issues and service requests.</p>
                    </div>
                    <a asp-controller="ServiceRequests" asp-action="List" class="btn btn-success">Track</a>
                </div>
            </div>
        </div>

    </div>
</div>
